{
  "name": "frontend",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "dotenv -e .env.local -- cross-env turbo run dev --parallel",
    "dev:about": "dotenv -e .env.local -- cross-env turbo run dev --filter=about",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "apps/web/*",
    "packages/*"
  ]
}
